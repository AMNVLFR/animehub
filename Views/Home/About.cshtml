@{
    ViewData["Title"] = "About AnimeHub";
}

<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h1 class="display-4 mb-4">About AnimeHub</h1>
                <p class="lead mb-5">Your ultimate destination for discovering, tracking, and discussing anime series from around the world.</p>
            </div>
        </div>

        <div class="row g-4 mb-5">
            <div class="col-md-4">
                <div class="card h-100 text-center">
                    <div class="card-body">
                        <i class="fas fa-search fa-3x text-anime mb-3"></i>
                        <h4 class="card-title">Discover</h4>
                        <p class="card-text">Explore thousands of anime series across all genres, from classics to the latest releases.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 text-center">
                    <div class="card-body">
                        <i class="fas fa-list fa-3x text-anime mb-3"></i>
                        <h4 class="card-title">Track</h4>
                        <p class="card-text">Keep track of what you've watched, create watchlists, and never miss an episode.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 text-center">
                    <div class="card-body">
                        <i class="fas fa-users fa-3x text-anime mb-3"></i>
                        <h4 class="card-title">Connect</h4>
                        <p class="card-text">Join a community of anime enthusiasts, share reviews, and discuss your favorite shows.</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-6 mb-4">
                <div class="card">
                    <div class="card-header">
                        <h4 class="mb-0">Our Mission</h4>
                    </div>
                    <div class="card-body">
                        <p>At AnimeHub, we believe anime is more than entertainmentâ€”it's a cultural phenomenon that brings people together across borders and languages. Our mission is to make anime accessible to everyone, providing a comprehensive platform where fans can discover new series, track their progress, and connect with fellow enthusiasts.</p>
                        <p>We strive to create the ultimate anime experience by offering detailed information, high-quality streaming, and a vibrant community that celebrates this incredible art form.</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 mb-4">
                <div class="card">
                    <div class="card-header">
                        <h4 class="mb-0">What We Offer</h4>
                    </div>
                    <div class="card-body">
                        <ul class="list-unstyled">
                            <li class="mb-2"><i class="fas fa-check text-anime me-2"></i>Comprehensive anime database with detailed information</li>
                            <li class="mb-2"><i class="fas fa-check text-anime me-2"></i>High-quality streaming with multiple resolutions</li>
                            <li class="mb-2"><i class="fas fa-check text-anime me-2"></i>Personal watchlists and progress tracking</li>
                            <li class="mb-2"><i class="fas fa-check text-anime me-2"></i>Community reviews and ratings</li>
                            <li class="mb-2"><i class="fas fa-check text-anime me-2"></i>Latest news and announcements</li>
                            <li class="mb-2"><i class="fas fa-check text-anime me-2"></i>Cross-platform compatibility</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-5">
            <div class="col-12 text-center">
                <div class="card bg-dark">
                    <div class="card-body py-5">
                        <h3 class="mb-3">Join Our Community</h3>
                        <p class="mb-4">Ready to start your anime journey? Create an account today and unlock the full AnimeHub experience.</p>
                        <div class="d-flex justify-content-center gap-3">
                            @if (!User.Identity.IsAuthenticated)
                            {
                                <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-anime btn-lg">Get Started</a>
                                <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-light btn-lg">Sign In</a>
                            }
                            else
                            {
                                <a asp-action="Dashboard" asp-controller="Home" class="btn btn-anime btn-lg">Go to Dashboard</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>