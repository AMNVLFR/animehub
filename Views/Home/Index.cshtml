@model IEnumerable<AnimeHub.Models.AnimeViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<!-- Featured Banner/Carousel -->
<section class="featured-banner position-relative">
    <div id="featuredCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#featuredCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#featuredCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#featuredCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
            <button type="button" data-bs-target="#featuredCarousel" data-bs-slide-to="3" aria-label="Slide 4"></button>
            <button type="button" data-bs-target="#featuredCarousel" data-bs-slide-to="4" aria-label="Slide 5"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <div class="featured-slide" style="background: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.7)), url('/images/attack_on_titan.jpg') center/cover;">
                    <div class="container h-100 d-flex align-items-center">
                        <div class="row">
                            <div class="col-lg-6">
                                <h1 class="display-4 fw-bold text-white mb-3">Attack on Titan</h1>
                                <p class="lead text-white mb-4">Humanity's fight against giant creatures in a post-apocalyptic world.</p>
                                <div class="d-flex gap-3">
                                    <a href="@(Model.FirstOrDefault(a => a.Slug == "attack-on-titan")?.HasEpisodes == true ?
                                        Url.Action("WatchEpisode", "Home", new { episodeId = Model.FirstOrDefault(a => a.Slug == "attack-on-titan")?.FirstEpisodeId }) :
                                        Url.Action("Detail", "Home", new { title = "attack-on-titan" }))" class="btn btn-anime btn-lg"><i class="fas fa-play me-2"></i>Watch Now</a>
                                    <a href="@Url.Action("Detail", "Home", new { title = "attack-on-titan" })" class="btn btn-outline-light btn-lg">Learn More</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <div class="featured-slide" style="background: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.7)), url('/images/one_piece.jpg') center/cover;">
                    <div class="container h-100 d-flex align-items-center">
                        <div class="row">
                            <div class="col-lg-6">
                                <h1 class="display-4 fw-bold text-white mb-3">One Piece</h1>
                                <p class="lead text-white mb-4">Follow Luffy's epic adventure to become the Pirate King.</p>
                                <div class="d-flex gap-3">
                                    <a href="@(Model.FirstOrDefault(a => a.Slug == "one-piece")?.HasEpisodes == true ?
                                        Url.Action("WatchEpisode", "Home", new { episodeId = Model.FirstOrDefault(a => a.Slug == "one-piece")?.FirstEpisodeId }) :
                                        Url.Action("Detail", "Home", new { title = "one-piece" }))" class="btn btn-anime btn-lg"><i class="fas fa-play me-2"></i>Watch Now</a>
                                    <a href="@Url.Action("Detail", "Home", new { title = "one-piece" })" class="btn btn-outline-light btn-lg">Learn More</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <div class="featured-slide" style="background: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.7)), url('/images/demon_slayer.jpg') center/cover;">
                    <div class="container h-100 d-flex align-items-center">
                        <div class="row">
                            <div class="col-lg-6">
                                <h1 class="display-4 fw-bold text-white mb-3">Demon Slayer</h1>
                                <p class="lead text-white mb-4">A young boy's journey to save his sister and defeat demons.</p>
                                <div class="d-flex gap-3">
                                    <a href="@(Model.FirstOrDefault(a => a.Slug == "demon-slayer")?.HasEpisodes == true ?
                                        Url.Action("WatchEpisode", "Home", new { episodeId = Model.FirstOrDefault(a => a.Slug == "demon-slayer")?.FirstEpisodeId }) :
                                        Url.Action("Detail", "Home", new { title = "demon-slayer" }))" class="btn btn-anime btn-lg"><i class="fas fa-play me-2"></i>Watch Now</a>
                                    <a href="@Url.Action("Detail", "Home", new { title = "demon-slayer" })" class="btn btn-outline-light btn-lg">Learn More</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <div class="featured-slide" style="background: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.7)), url('/images/dragon_ball_z.jpg') center/cover;">
                    <div class="container h-100 d-flex align-items-center">
                        <div class="row">
                            <div class="col-lg-6">
                                <h1 class="display-4 fw-bold text-white mb-3">Dragon Ball Z</h1>
                                <p class="lead text-white mb-4">Goku and his friends defend Earth from powerful villains and otherworldly threats.</p>
                                <div class="d-flex gap-3">
                                    <a href="@(Model.FirstOrDefault(a => a.Slug == "dragon-ball-z")?.HasEpisodes == true ?
                                        Url.Action("WatchEpisode", "Home", new { episodeId = Model.FirstOrDefault(a => a.Slug == "dragon-ball-z")?.FirstEpisodeId }) :
                                        Url.Action("Detail", "Home", new { title = "dragon-ball-z" }))" class="btn btn-anime btn-lg"><i class="fas fa-play me-2"></i>Watch Now</a>
                                    <a href="@Url.Action("Detail", "Home", new { title = "dragon-ball-z" })" class="btn btn-outline-light btn-lg">Learn More</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <div class="featured-slide" style="background: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.7)), url('/images/naruto.jpg') center/cover;">
                    <div class="container h-100 d-flex align-items-center">
                        <div class="row">
                            <div class="col-lg-6">
                                <h1 class="display-4 fw-bold text-white mb-3">Naruto</h1>
                                <p class="lead text-white mb-4">A young ninja's journey to become the strongest ninja and leader of his village.</p>
                                <div class="d-flex gap-3">
                                    <a href="@(Model.FirstOrDefault(a => a.Slug == "naruto")?.HasEpisodes == true ?
                                        Url.Action("WatchEpisode", "Home", new { episodeId = Model.FirstOrDefault(a => a.Slug == "naruto")?.FirstEpisodeId }) :
                                        Url.Action("Detail", "Home", new { title = "naruto" }))" class="btn btn-anime btn-lg"><i class="fas fa-play me-2"></i>Watch Now</a>
                                    <a href="@Url.Action("Detail", "Home", new { title = "naruto" })" class="btn btn-outline-light btn-lg">Learn More</a>
                                </div>
                            </div>
                        </div>
                    </div>
