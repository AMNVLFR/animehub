@model IEnumerable<AnimeHub.Models.News>

@{
    ViewData["Title"] = "Manage News";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="dashboard-card">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2>News Management</h2>
                    <a href="@Url.Action("CreateNews", "Admin")" class="btn btn-anime">
                        <i class="fas fa-plus"></i> Add News Article
                    </a>
                </div>

                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["Success"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <div class="table-responsive">
                    <table class="table table-dark table-striped">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Title</th>
                                <th>Author</th>
                                <th>Created</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var news in Model)
                            {
                                <tr>
                                    <td>@news.NewsId</td>
                                    <td>@news.Title</td>
                                    <td>@news.Author</td>
                                    <td>@news.PublishedAt.ToString("yyyy-MM-dd")</td>
                                    <td>
                                        <a href="@Url.Action("EditNews", "Admin", new { id = news.NewsId })" class="btn btn-sm btn-outline-primary me-2">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                        <a href="@Url.Action("DeleteNews", "Admin", new { id = news.NewsId })" class="btn btn-sm btn-outline-danger">
                                            <i class="fas fa-trash"></i> Delete
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @if (!Model.Any())
                {
                    <div class="text-center py-5">
                        <i class="fas fa-newspaper fa-3x text-muted mb-3"></i>
                        <h4 class="text-muted">No news articles found</h4>
                        <p class="text-muted">Start by adding your first news article.</p>
                        <a href="@Url.Action("CreateNews", "Admin")" class="btn btn-anime">Add News Article</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>