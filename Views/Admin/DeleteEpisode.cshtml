@model AnimeHub.Models.Episode

@{
    ViewData["Title"] = "Delete Episode";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="dashboard-card">
                <h2 class="mb-4">Delete Episode</h2>

                <div class="alert alert-warning" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <strong>Warning!</strong> This action cannot be undone. Are you sure you want to delete this episode?
                </div>

                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Episode Details</h5>
                    </div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-3">Anime:</dt>
                            <dd class="col-sm-9">@Model.Anime?.Title</dd>

                            <dt class="col-sm-3">Episode Number:</dt>
                            <dd class="col-sm-9">@Model.EpisodeNumber</dd>

                            <dt class="col-sm-3">Title:</dt>
                            <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.Title) ? "N/A" : Model.Title)</dd>

                            <dt class="col-sm-3">Air Date:</dt>
                            <dd class="col-sm-9">@(Model.AirDate?.ToString("MMM dd, yyyy") ?? "N/A")</dd>

                            <dt class="col-sm-3">Duration:</dt>
                            <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.Duration) ? "N/A" : Model.Duration)</dd>

                            <dt class="col-sm-3">Created:</dt>
                            <dd class="col-sm-9">@Model.CreatedAt.ToString("MMM dd, yyyy 'at' HH:mm")</dd>
                        </dl>

                        @if (!string.IsNullOrEmpty(Model.VideoUrl))
                        {
                            <div class="mt-3">
                                <strong>Video URL:</strong>
                                <div class="mt-2">
                                    <code class="d-block p-2 bg-light rounded">@Model.VideoUrl</code>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <form asp-action="DeleteEpisode" method="post">
                    <input type="hidden" name="id" value="@Model.EpisodeId" />
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Yes, Delete Episode
                        </button>
                        <a href="@Url.Action("Episodes", "Admin")" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>