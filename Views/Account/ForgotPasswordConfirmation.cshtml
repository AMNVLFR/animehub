@{
    ViewData["Title"] = "Forgot Password Confirmation";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Check Your Email</h3>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="fas fa-envelope text-success" style="font-size: 3rem;"></i>
                    </div>
                    <h5 class="card-title">Password Reset Link Sent</h5>
                    <p class="card-text text-muted">
                        If an account with that email address exists, we've sent you a password reset link.
                        Please check your email (including your spam folder) and follow the instructions to reset your password.
                    </p>

                    <div class="alert alert-info mt-4">
                        <strong>Note:</strong> The reset link will expire in 24 hours for security reasons.
                    </div>

                    <div class="mt-4">
                        <p class="text-muted small">
                            Didn't receive the email? Check your spam folder or
                            <a href="@Url.Action("ForgotPassword", "Account")">try again</a>.
                        </p>
                    </div>
                </div>
                <div class="card-footer text-center">
                    <a href="@Url.Action("Login", "Account")" class="btn btn-anime">Back to Login</a>
                </div>
            </div>
        </div>
    </div>
</div>