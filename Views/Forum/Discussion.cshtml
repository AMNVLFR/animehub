@model AnimeHub.Models.News

@{
    ViewData["Title"] = $"{Model.Title} - Discussion";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-8">
            <!-- News Article Header -->
            <div class="card mb-4">
                <div class="card-body">
                    <div class="d-flex align-items-start mb-3">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="@Model.ImageUrl" alt="@Model.Title" class="me-3 rounded" style="width: 80px; height: 60px; object-fit: cover;">
                        }
                        <div>
                            <h2 class="h4 mb-1">@Model.Title</h2>
                            <small class="text-muted">
                                Published @Model.PublishedAt.ToString("MMM dd, yyyy") by @(string.IsNullOrEmpty(Model.Author) ? "AnimeHub Staff" : Model.Author)
                            </small>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Content))
                    {
                        <div class="mb-3">
                            @Html.Raw(Model.Content.Replace("\n", "<br>"))
                        </div>
                    }

                    <div class="border-top pt-3">
                        <h5 class="mb-3">
                            <i class="fas fa-comments me-2"></i>
                            Discussion (@Model.ForumPosts?.Count ?? 0 posts)
                        </h5>
                    </div>
                </div>
            </div>

            <!-- Forum Posts -->
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">Forum Discussion</h6>
                </div>
                <div class="card-body">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <!-- New Post Form -->
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <form asp-controller="Forum" asp-action="CreatePost" method="post" class="mb-4">
                            <input type="hidden" name="newsId" value="@Model.NewsId" />
                            <div class="mb-3">
                                <label class="form-label">Share your thoughts:</label>
                                <textarea name="content" class="form-control" rows="3" placeholder="What do you think about this news?" required></textarea>
                            </div>
                            <button type="submit" class="btn btn-anime">
                                <i class="fas fa-paper-plane me-2"></i>Post Comment
                            </button>
                        </form>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            <a href="@Url.Action("Login", "Account")" class="alert-link">Sign in</a> to join the discussion.
                        </div>
                    }

                    <!-- Forum Posts List -->
                    @if (Model.ForumPosts != null && Model.ForumPosts.Any())
                    {
                        <div class="forum-posts">
                            @foreach (var post in Model.ForumPosts.Where(p => p.ParentPostId == null).OrderByDescending(p => p.CreatedAt))
                            {
                                <div class="forum-post mb-3 p-3 border rounded">
                                    <div class="d-flex align-items-start">
                                        <div class="flex-shrink-0 me-3">
                                            @if (!string.IsNullOrEmpty(post.User?.UserName))
                                            {
                                                <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px; font-weight: bold;">
                                                    @(post.User.UserName?.Substring(0, 1).ToUpper())
                                                </div>
                                            }
                                        </div>
                                        <div class="flex-grow-1">
                                            <div class="d-flex justify-content-between align-items-center mb-2">
                                                <strong>@post.User?.UserName</strong>
                                                <small class="text-muted">@post.CreatedAt.ToString("MMM dd, yyyy 'at' HH:mm")</small>
                                            </div>
                                            <p class="mb-2">@Html.Raw(post.Content.Replace("\n", "<br>"))</p>

                                            <!-- Reply Button -->
                                            @if (User.Identity?.IsAuthenticated == true)
                                            {
                                                <button class="btn btn-sm btn-outline-primary reply-btn" data-post-id="@post.ForumPostId">
                                                    <i class="fas fa-reply me-1"></i>Reply
                                                </button>
                                            }

                                            <!-- Reply Form (hidden by default) -->
                                            <div class="reply-form mt-3" id="reply-form-@post.ForumPostId" style="display: none;">
                                                <form asp-controller="Forum" asp-action="CreateReply" method="post">
                                                    <input type="hidden" name="newsId" value="@Model.NewsId" />
                                                    <input type="hidden" name="parentPostId" value="@post.ForumPostId" />
                                                    <div class="mb-2">
                                                        <textarea name="content" class="form-control form-control-sm" rows="2" placeholder="Write your reply..." required></textarea>
                                                    </div>
                                                    <div class="d-flex gap-2">
                                                        <button type="submit" class="btn btn-sm btn-anime">Reply</button>
                                                        <button type="button" class="btn btn-sm btn-outline-secondary cancel-reply" data-post-id="@post.ForumPostId">Cancel</button>
                                                    </div>
                                                </form>
                                            </div>

                                            <!-- Replies -->
                                            @if (post.Replies != null && post.Replies.Any())
                                            {
                                                <div class="replies mt-3 ms-4">
                                                    @foreach (var reply in post.Replies.OrderBy(r => r.CreatedAt))
                                                    {
                                                        <div class="reply border-start border-primary ps-3 py-2 mb-2">
                                                            <div class="d-flex justify-content-between align-items-center mb-1">
                                                                <strong class="small">@reply.User?.UserName</strong>
                                                                <small class="text-muted small">@reply.CreatedAt.ToString("MMM dd, yyyy 'at' HH:mm")</small>
                                                            </div>
                                                            <p class="small mb-0">@Html.Raw(reply.Content.Replace("\n", "<br>"))</p>
                                                        </div>
                                                    }
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-comments fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No discussion yet</h5>
                            <p class="text-muted">Be the first to share your thoughts about this news!</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h6 class="mb-0">Discussion Rules</h6>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled small">
                        <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Be respectful to other users</li>
                        <li class="mb-2"><i class="fas fa-check text-success me-2"></i>Stay on topic</li>
                        <li class="mb-2"><i class="fas fa-check text-success me-2"></i>No spam or self-promotion</li>
                        <li class="mb-0"><i class="fas fa-check text-success me-2"></i>Report inappropriate content</li>
                    </ul>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">Quick Links</h6>
                </div>
                <div class="card-body">
                    <a href="@Url.Action("Index", "Home")" class="btn btn-outline-primary btn-sm w-100 mb-2">
                        <i class="fas fa-home me-2"></i>Home
                    </a>
                    <a href="@Url.Action("News", "Home")" class="btn btn-outline-primary btn-sm w-100">
                        <i class="fas fa-newspaper me-2"></i>All News
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Handle reply button clicks
            document.querySelectorAll('.reply-btn').forEach(button => {
                button.addEventListener('click', function() {
                    const postId = this.getAttribute('data-post-id');
                    const replyForm = document.getElementById('reply-form-' + postId);
                    if (replyForm) {
                        replyForm.style.display = replyForm.style.display === 'none' ? 'block' : 'none';
                    }
                });
            });

            // Handle cancel reply button clicks
            document.querySelectorAll('.cancel-reply').forEach(button => {
                button.addEventListener('click', function() {
                    const postId = this.getAttribute('data-post-id');
                    const replyForm = document.getElementById('reply-form-' + postId);
                    if (replyForm) {
                        replyForm.style.display = 'none';
                    }
                });
            });
        });
    </script>
}