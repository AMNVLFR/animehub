@model AnimeHub.Models.Anime

@{
    ViewData["Title"] = "Delete Anime";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="dashboard-card">
                <h2 class="mb-4">Delete Anime</h2>

                <h3 class="text-danger mb-3">Are you sure you want to delete this anime?</h3>

                <div class="card mb-4">
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-3">Title</dt>
                            <dd class="col-sm-9">@Model.Title</dd>

                            <dt class="col-sm-3">Slug</dt>
                            <dd class="col-sm-9">@Model.Slug</dd>

                            <dt class="col-sm-3">Synopsis</dt>
                            <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.Synopsis) ? "No synopsis available" : Model.Synopsis)</dd>

                            <dt class="col-sm-3">Year</dt>
                            <dd class="col-sm-9">@Model.Year</dd>

                            <dt class="col-sm-3">Rating</dt>
                            <dd class="col-sm-9">@Model.Rating</dd>

                            <dt class="col-sm-3">Status</dt>
                            <dd class="col-sm-9">@Model.Status</dd>

                            <dt class="col-sm-3">Studio</dt>
                            <dd class="col-sm-9">@Model.Studio</dd>

                            <dt class="col-sm-3">Genres</dt>
                            <dd class="col-sm-9">
                                @if (Model.AnimeGenres != null && Model.AnimeGenres.Any())
                                {
                                    @string.Join(", ", Model.AnimeGenres.Select(ag => ag.Genre?.Name))
                                }
                                else
                                {
                                    <span class="text-muted">No genres assigned</span>
                                }
                            </dd>
                        </dl>
                    </div>
                </div>

                <div class="alert alert-warning">
                    <strong>Warning:</strong> Deleting this anime will also delete all associated episodes and related data. This action cannot be undone.
                </div>

                <form asp-action="DeleteAnime" method="post">
                    <input type="hidden" asp-for="AnimeId" />
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Yes, Delete Anime
                        </button>
                        <a href="@Url.Action("Animes", "Admin")" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>