@model IEnumerable<AnimeHub.Models.News>

@{
    ViewData["Title"] = "Anime News";
}

<section class="py-5">
    <div class="container">
        <h1 class="text-center mb-5">Latest Anime News</h1>

        @if (Model.Any())
        {
            <div class="row">
                <!-- Featured News Article (First article) -->
                @if (Model.FirstOrDefault() != null)
                {
                    var featuredNews = Model.First();
                    <div class="col-lg-8 mb-4">
                        @if (featuredNews.NewsType == AnimeHub.Models.NewsType.External && !string.IsNullOrEmpty(featuredNews.LinkUrl))
                        {
                            <a href="@featuredNews.LinkUrl" target="_blank" class="text-decoration-none">
                                <div class="card featured-news">
                                    <div class="card-img-container position-relative">
                                        <img src="@(string.IsNullOrEmpty(featuredNews.ImageUrl) ? "https://via.placeholder.com/800x400/2c2c2c/ffffff?text=Featured+News" : featuredNews.ImageUrl)"
                                             class="card-img-top" alt="@featuredNews.Title">
                                        <div class="news-overlay d-flex align-items-end">
                                            <div class="p-4 text-white">
                                                <span class="badge bg-anime mb-2">External Link</span>
                                                <h2 class="h3 mb-2">@featuredNews.Title</h2>
                                                @if (!string.IsNullOrEmpty(featuredNews.Content))
                                                {
                                                    <div class="mb-0">@Html.Raw(featuredNews.Content.Replace("\n", "<br>"))</div>
                                                }
                                                <small class="text-white-50">
                                                    @featuredNews.PublishedAt.ToString("MMM dd, yyyy") • By @(string.IsNullOrEmpty(featuredNews.Author) ? "AnimeHub Staff" : featuredNews.Author) • External Link
                                                </small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        }
                        else if (featuredNews.NewsType == AnimeHub.Models.NewsType.Internal)
                        {
                            <a href="@Url.Action("Discussion", "Forum", new { id = featuredNews.NewsId })" class="text-decoration-none">
                                <div class="card featured-news">
                                    <div class="card-img-container position-relative">
                                        <img src="@(string.IsNullOrEmpty(featuredNews.ImageUrl) ? "https://via.placeholder.com/800x400/2c2c2c/ffffff?text=Featured+News" : featuredNews.ImageUrl)"
                                             class="card-img-top" alt="@featuredNews.Title">
                                        <div class="news-overlay d-flex align-items-end">
                                            <div class="p-4 text-white">
                                                <span class="badge bg-anime mb-2">Discussion</span>
                                                <h2 class="h3 mb-2">@featuredNews.Title</h2>
                                                @if (!string.IsNullOrEmpty(featuredNews.Content))
                                                {
                                                    <div class="mb-0">@Html.Raw(featuredNews.Content.Replace("\n", "<br>"))</div>
                                                }
                                                <small class="text-white-50">
                                                    @featuredNews.PublishedAt.ToString("MMM dd, yyyy") • By @(string.IsNullOrEmpty(featuredNews.Author) ? "AnimeHub Staff" : featuredNews.Author) • @(featuredNews.ForumPosts?.Count ?? 0) comments
                                                </small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        }
                        else
                        {
                            <div class="card featured-news">
                                <div class="card-img-container position-relative">
                                    <img src="@(string.IsNullOrEmpty(featuredNews.ImageUrl) ? "https://via.placeholder.com/800x400/2c2c2c/ffffff?text=Featured+News" : featuredNews.ImageUrl)"
                                         class="card-img-top" alt="@featuredNews.Title">
                                    <div class="news-overlay d-flex align-items-end">
                                        <div class="p-4 text-white">
                                            <span class="badge bg-anime mb-2">News</span>
                                            <h2 class="h3 mb-2">@featuredNews.Title</h2>
                                            @if (!string.IsNullOrEmpty(featuredNews.Content))
                                            {
                                                <div class="mb-0">@Html.Raw(featuredNews.Content.Replace("\n", "<br>"))</div>
                                            }
                                            <small class="text-white-50">
                                                @featuredNews.PublishedAt.ToString("MMM dd, yyyy") • By @(string.IsNullOrEmpty(featuredNews.Author) ? "AnimeHub Staff" : featuredNews.Author)
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }

                <!-- Sidebar News (Next 3 articles) -->
                <div class="col-lg-4">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0 text-dark">Latest News</h5>
                        </div>
                        <div class="card-body p-0">
                            <div class="list-group list-group-flush">
                                @foreach (var news in Model.Skip(1).Take(3))
                                {
                                    @if (news.NewsType == AnimeHub.Models.NewsType.External && !string.IsNullOrEmpty(news.LinkUrl))
                                    {
                                        <a href="@news.LinkUrl" target="_blank" class="list-group-item list-group-item-action d-flex align-items-start text-decoration-none">
                                            <img src="@(string.IsNullOrEmpty(news.ImageUrl) ? "https://via.placeholder.com/80x60/2c2c2c/ffffff?text=News" : news.ImageUrl)"
                                                 class="me-3 rounded" alt="@news.Title" style="width: 80px; height: 60px; object-fit: cover;">
                                            <div class="flex-grow-1">
                                                <h6 class="mb-1">@news.Title</h6>
                                                <small class="text-muted">
                                                    @news.PublishedAt.ToString("MMM dd, yyyy") • External
                                                </small>
                                            </div>
                                        </a>
                                    }
                                    else if (news.NewsType == AnimeHub.Models.NewsType.Internal)
                                    {
                                        <a href="@Url.Action("Discussion", "Forum", new { id = news.NewsId })" class="list-group-item list-group-item-action d-flex align-items-start text-decoration-none">
                                            <img src="@(string.IsNullOrEmpty(news.ImageUrl) ? "https://via.placeholder.com/80x60/2c2c2c/ffffff?text=News" : news.ImageUrl)"
                                                 class="me-3 rounded" alt="@news.Title" style="width: 80px; height: 60px; object-fit: cover;">
                                            <div class="flex-grow-1">
                                                <h6 class="mb-1">@news.Title</h6>
                                                <small class="text-muted">
                                                    @news.PublishedAt.ToString("MMM dd, yyyy") • @(news.ForumPosts?.Count ?? 0) comments
                                                </small>
                                            </div>
                                        </a>
                                    }
                                    else
                                    {
                                        <div class="list-group-item list-group-item-action d-flex align-items-start">
                                            <img src="@(string.IsNullOrEmpty(news.ImageUrl) ? "https://via.placeholder.com/80x60/2c2c2c/ffffff?text=News" : news.ImageUrl)"
                                                 class="me-3 rounded" alt="@news.Title" style="width: 80px; height: 60px; object-fit: cover;">
                                            <div class="flex-grow-1">
                                                <h6 class="mb-1">@news.Title</h6>
                                                <small class="text-muted">
                                                    @news.PublishedAt.ToString("MMM dd, yyyy")
                                                </small>
                                            </div>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- News Articles Grid (Remaining articles) -->
            <div class="row">
                @foreach (var news in Model.Skip(4))
                {
                    <div class="col-md-6 col-lg-4 mb-4">
                        @if (news.NewsType == AnimeHub.Models.NewsType.External && !string.IsNullOrEmpty(news.LinkUrl))
                        {
                            <a href="@news.LinkUrl" target="_blank" class="text-decoration-none">
                                <div class="card h-100">
                                    <img src="@(string.IsNullOrEmpty(news.ImageUrl) ? "https://via.placeholder.com/400x250/2c2c2c/ffffff?text=News+Article" : news.ImageUrl)"
                                         class="card-img-top" alt="@news.Title" style="height: 200px; object-fit: cover;">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <h5 class="card-title mb-0">@news.Title</h5>
                                            <span class="badge bg-primary small">External</span>
                                        </div>
                                        @if (!string.IsNullOrEmpty(news.Content))
                                        {
                                            <div class="card-text">
                                                @Html.Raw(news.Content.Replace("\n", "<br>"))
                                            </div>
                                        }
                                        <div class="d-flex justify-content-between align-items-center">
                                            <small class="text-muted">@news.PublishedAt.ToString("MMM dd, yyyy")</small>
                                            <small class="text-muted">External Link</small>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        }
                        else if (news.NewsType == AnimeHub.Models.NewsType.Internal)
                        {
                            <a href="@Url.Action("Discussion", "Forum", new { id = news.NewsId })" class="text-decoration-none">
                                <div class="card h-100">
                                    <img src="@(string.IsNullOrEmpty(news.ImageUrl) ? "https://via.placeholder.com/400x250/2c2c2c/ffffff?text=News+Article" : news.ImageUrl)"
                                         class="card-img-top" alt="@news.Title" style="height: 200px; object-fit: cover;">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <h5 class="card-title mb-0">@news.Title</h5>
                                            <span class="badge bg-success small">Discussion</span>
                                        </div>
                                        @if (!string.IsNullOrEmpty(news.Content))
                                        {
                                            <p class="card-text">@(news.Content.Length > 120 ? news.Content.Substring(0, 120) + "..." : news.Content)</p>
                                        }
                                        <div class="d-flex justify-content-between align-items-center">
                                            <small class="text-muted">@news.PublishedAt.ToString("MMM dd, yyyy")</small>
                                            <small class="text-muted">@(news.ForumPosts?.Count ?? 0) comments</small>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        }
                        else
                        {
                            <div class="card h-100">
                                <img src="@(string.IsNullOrEmpty(news.ImageUrl) ? "https://via.placeholder.com/400x250/2c2c2c/ffffff?text=News+Article" : news.ImageUrl)"
                                     class="card-img-top" alt="@news.Title" style="height: 200px; object-fit: cover;">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <h5 class="card-title mb-0">@news.Title</h5>
                                        <span class="badge bg-secondary small">News</span>
                                    </div>
                                    @if (!string.IsNullOrEmpty(news.Content))
                                    {
                                        <p class="card-text">@(news.Content.Length > 120 ? news.Content.Substring(0, 120) + "..." : news.Content)</p>
                                    }
                                    <div class="d-flex justify-content-between align-items-center">
                                        <small class="text-muted">@news.PublishedAt.ToString("MMM dd, yyyy")</small>
                                        <small class="text-muted">By @(string.IsNullOrEmpty(news.Author) ? "AnimeHub" : news.Author)</small>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        }
        else
        {
            <!-- No News Available -->
            <div class="text-center py-5">
                <i class="fas fa-newspaper fa-3x text-muted mb-3"></i>
                <h4 class="text-muted">No News Available</h4>
                <p class="text-muted">Check back later for the latest anime news and updates.</p>
            </div>
        }

        <!-- Admin Link (only visible to admins) -->
        @if (User.IsInRole("Admin"))
        {
            <div class="text-center mt-4">
                <a href="@Url.Action("News", "Admin")" class="btn btn-anime">
                    <i class="fas fa-cog me-2"></i>Manage News Articles
                </a>
            </div>
        }
    </div>
</section>